@model Cart

<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model.Items)
                                {
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="img/shopping-cart/cart-1.jpg" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.Product.Name</h6>
                                            <h5>@item.Product.Price</h5>
                                        </div>
                                    </td>
                                    <form asp-controller="Cart" asp-action="UpdateCount" method="post">
                                        <input type="hidden" value="@item.ProductId" name="productId" />
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input value="@item.Count" name="count">
                                                <button type="submit">Update</button>
                                            </div>
                                        </div>
                                    </td>
                                    </form>
                                    <td class="cart__price">C @item.Product.Price</td>
                                    <td class="cart__close"><i class="fa fa-close"></i></td>
                                }
                            </tr>
                                
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a asp-controller="Home" asp-action="Index">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn update__btn">
                                <a href="#"><i class="fa fa-spinner"></i> Update cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart__total">
                        <h6>Cart total</h6>
                        <ul>
                        <li>Total <span>@ViewBag.TotalPrice</span></li>
                        </ul>
                        <a href="#" class="primary-btn">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>