@model ModeMan.Ecommerce.Entities.Product
@using ModeMan.Ecommerce.Enums

@{
    ViewData["Title"] = "Yeni Məhsul Əlavə Et";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Yeni Məhsul Əlavə Et</h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Product Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Məhsul Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Məhsul adını daxil edin" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Product Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Təsvir</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Məhsul haqqında qısa təsvir"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Qiymət (AZN)</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Qiyməti daxil edin" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Kateqoriya</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                                <option value="">Seçin</option>
                                @* Category-ləri controllerdən ViewBag və ya ViewData ilə göndərə bilərsən *@
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <!-- Product Images -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Məhsul Şəkilləri</label>
                            <input type="file" name="files" multiple class="form-control" />
                            <small class="form-text text-muted">Ən azı 1 şəkil seçin. JPG, PNG formatları.</small>
                        </div>

                        <!-- Submit -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
                            <button type="submit" class="btn btn-primary fw-bold">Əlavə Et</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
