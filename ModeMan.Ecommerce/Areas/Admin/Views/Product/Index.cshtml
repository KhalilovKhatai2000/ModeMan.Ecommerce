@model IEnumerable<ModeMan.Ecommerce.Entities.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Products</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Add New Product
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No products found.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" class="text-start">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Stock</th>
                        <th scope="col" class="text-start">Category</th>
                        <th scope="col" class="text-start">Description</th>
                        <th scope="col">Images</th>
                        <th scope="col">Order Count</th>
                        <th scope="col" style="width:180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td class="text-start">@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Stock</td>
                            <td class="text-start">@(product.Category?.Name ?? "—")</td>
                            <td class="text-start text-truncate" style="max-width:200px;">@product.Description</td>
                            <td>
                                @if (product.Images != null && product.Images.Any())
                                {
                                    var img = product.Images.FirstOrDefault()?.Url ?? "";
                                    <img src="@img" alt="@product.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            </td>
                            <!--
                             <td>@(product?.OrderItems?.Count < 0 ? product?.OrderItems?.Count : 0)</td>
                            -->
                            <td>@product?.OrderItems?.Count</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this product?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">






